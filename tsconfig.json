{
  "compilerOptions": {
    /* ğŸš€ Node.js CommonJS Target */
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],

    /* ğŸ“‚ Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* ğŸ”„ Interop & Module Syntax */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ğŸ§  Type Safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* ğŸ—ºï¸ Debugging & Declarations */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
