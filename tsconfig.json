{
  "compilerOptions": {
    /* ğŸš€ Node.js CommonJS Target */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],

    /* ğŸ“‚ Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* ğŸ”„ Interop & Module Syntax */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* ğŸ§  Type Safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* ğŸ—ºï¸ Debugging & Declarations */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ğŸ§¹ Output Cleanup */
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
